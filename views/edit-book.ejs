<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold"><%= book.name%> </h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead">Help make this listing even better</p>
    </div>
  </div>
  
  <div class="row justify-content-center">
  
    <div class="col-8">
  
      <form action="/edit-book/<%=book._id%>?_method=PUT" method="POST">
      
        <div class="row g-3">
  
  
          <div class="col-12">
            <label for="name" class="form-label">Book Name</label>
            <input type="text" name="name" id="name" class="form-control" value = "<%= book.name%>" required>
          </div>
          
          <div class="col-12">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" id="description" class="form-control" cols="30" rows="4" required><%= book.description%></textarea>
          </div>
  
          <div class="col-12">
            <label for="quote" class="form-label">Favorite Quote</label>
            <input type="text" name="quote" id="quote" class="form-control" value = "<%= book.quote%>">
          </div>
  
          <div class="col-12">
            <label for="songs" class="form-label">Songs(s)</label><br>
            <div class="songList">
              <div class="songDiv">
                <input type="text" name="songs" class="form-control" placeholder="add Youtube link" required>
              </div>
            </div>
          </div>
          
          <div class="col-12 mt-2">
            <button type="button" class="btn btn-outline-primary" id="addSongBtn">+ to add more than one song</button>
          </div>
  
          <div class="col-12">
            <button type="submit" class="btn btn-lg btn-primary">Update listing</button>
          </div>
        </div>
      
      </form>
  
    </div>
  </div>